<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.misk.dvdbang.SearchBangActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="시 / 군 / 구  : "
        android:id="@+id/cityView"
        android:textSize="30dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/cityInput"
        android:layout_alignTop="@+id/cityView"
        android:layout_toEndOf="@+id/cityView" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="해당되는 &apos;특별시&apos; 또는 &apos;도&apos; 를 선택 하십시오"
        android:textSize="15dp" />

    <Spinner
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:id="@+id/spinner"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="읍 / 면 / 동  : "
        android:id="@+id/dongView"
        android:textSize="30dp"
        android:layout_below="@+id/cityView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/dongInput"
        android:layout_alignTop="@+id/dongView"
        android:layout_toEndOf="@+id/dongView" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="검색"
        android:id="@+id/searchButton2"
        android:layout_below="@+id/dongView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="30dp" />

</RelativeLayout>
