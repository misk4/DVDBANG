<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.misk.dvdbang.MainMenuActivity"
    android:id="@+id/main_menu_view">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="영화방 찾기"
            android:id="@+id/searchBangButton"
            android:layout_marginTop="51dp"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/searchMovieButton" />

        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="영화 검색"
            android:id="@+id/searchMovieButton"
            android:layout_below="@+id/searchBangButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:textSize="30dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="상세 검색"
            android:id="@+id/searchDetailedButton"
            android:layout_marginTop="53dp"
            android:textSize="30dp"
            android:layout_below="@+id/searchMovieButton"
            android:layout_alignStart="@+id/searchMovieButton" />

        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="종료"
            android:id="@+id/exitButton"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/searchDetailedButton"
            android:layout_alignParentStart="false"
            android:textSize="30dp" />
    </RelativeLayout>
</RelativeLayout>
