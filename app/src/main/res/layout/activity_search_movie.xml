<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.misk.dvdbang.SearchMovieActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="DVD방 이름  : "
        android:id="@+id/bangView"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="영화  제목     : "
        android:id="@+id/movieView"
        android:layout_below="@+id/bangView"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/bangInput"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/bangView" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/movieInput"
        android:layout_alignTop="@+id/movieView"
        android:layout_alignStart="@+id/bangInput" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="검 색"
        android:id="@+id/searchButton2"
        android:layout_below="@+id/movieView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/resultTextView"
        android:layout_below="@+id/searchButton2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="위 치"
        android:id="@+id/positionButton"
        android:layout_below="@+id/resultTextView"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="30dp" />
</RelativeLayout>
