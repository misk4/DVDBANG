<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.misk.dvdbang.SearchDetailedActivity">

    <TextView
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="영화 장르"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Spinner
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/genreSpinner"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:text="영화 시간"
        android:layout_marginTop="50dp" />

    <Spinner
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/movieTimeSpinner"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="제작년도"
        android:id="@+id/textView3"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Spinner
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/movieYearSpinner"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="키워드 : "
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:id="@+id/keywordInput"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ex) 제목, 부분 제목"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/keywordInput" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="검 색"
        android:id="@+id/detailedSearchButton"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="30dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailedSearchListView"
        android:layout_below="@+id/detailedSearchButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
